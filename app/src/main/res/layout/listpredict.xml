<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clipToPadding="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listText_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/down"
            android:backgroundTint="@color/down"
            android:padding="10dp"
            android:text="00:00 - 01:00"
            android:textColor="@color/common_plus_signin_btn_text_light_focused"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listText_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="#EFEBE9"
            android:padding="10dp"
            android:text="ìž "
            android:textAlignment="center"
            android:textColor="@color/common_plus_signin_btn_text_light_focused"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listText_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="70.0%"
            android:textColor="@color/common_plus_signin_btn_text_light_focused"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>